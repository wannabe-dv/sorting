// sort binary array in place
// Input : [1, 0, 1, 0, 1, 0, 0, 1]
// Output: [0, 0, 0, 0, 1, 1, 1, 1]

function binary_sort(int number [] );
  int pivot = 1;
  for (int i=0; i<number.size(); i++) begin
    if (number[i] < pivot) begin
      temp = number[i];
      number[i] = number[j];
      number[j] = temp;
      j+=1;
    end
  end
endfunction : binary_sort
